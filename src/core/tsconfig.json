{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./target/types",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "public/**/*",
    "server/**/*",
    "types/**/*",
    "test_helpers/**/*",
    "utils/**/*",
    "index.ts",
    "typings.ts"
  ],
  "exclude": [
    "server/**/*.test.ts",
    "server/saved_objects/routes/test_utils.ts",
    "server/test_utils.ts"
  ],
  "references": [{ "path": "../test_utils/" }]
}
